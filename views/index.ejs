<% include partials/header %>

    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <% posts.forEach(post => { %>
                    <div class="card border-dark mb-3">
                        <div class="card-header">
                            <a class="postLink" href="/category/<%= post.category %>">
                                <%= post.categoryFull %>
                            </a>
                        </div>
                        <div class="card-body">
                            <a class="postLink" href="/post/<%= post._id %>">
                                <h5 class="card-title"><%= post.title %></h5>
                            </a>
                            <p class="card-text"><%= post.body %></p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <a class="postLink" href="/profile/<%= post.author.id %>"><%= post.author.name %></a> - <%= post.date %>
                                </small>
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

<% include partials/footer %>