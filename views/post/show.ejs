<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-md-10 mx-auto">
                <!-- Post -->
                <div class="card border border-dark mb-3">
                    <div class="card-header">
                        <a class="postLink" href="/profile/<%= post.author.id %>">
                            <%= post.author.name %>
                        </a> - 
                        <a class="postLink" href="/category/<%= post.category %>">
                            <%= post.categoryFull %>
                        </a>
                    </div>
                    <div class="card-body">
                        <h1 class="card-title"><%= post.title %></h1>
                        <h6 class="card-subtitle text-muted"><%= post.date %></h6>
                        <hr>
                        <p class="card-text mt-3 mb-3"><%= post.body %></p>
                    </div>
                </div>
                
                <!-- Comments -->
                <% if (post.comments.length) { %>
                    <div id="comments" class="border border-dark">
                        <% post.comments.forEach(comment => { %>
                            <div class="media mb-4 mt-4 ml-4">
                                <img class="d-flex mr-3" src="https://i.pinimg.com/736x/04/6e/91/046e91f77483a277a434bac9ae4885e2--ui-framework-user-experience-design.jpg" width="50" height="50" alt="">
                                <div class="media-body">
                                    <h5 class="mt-0">
                                        <a class="text-info" href="/profile/<%= comment.author.id %>">
                                            <%= comment.author.name %>
                                        </a>
                                            - 
                                        <small class="text-muted">
                                            <%= comment.date %>
                                        </small>
                                    </h5>
                                    <%= comment.body %>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } %>
                
                <!-- Comments Form -->
                <div class="card border border-dark my-4">
                    <h5 class="card-header">Deja un comentario</h5>
                    <div class="card-body">
                        <form action="/post/<%= post._id %>/comment" method="POST">
                            <div class="form-group">
                                <textarea name="comment[body]" class="form-control" rows="3"></textarea>
                            </div>
                            <button type="submit" class="btn btn-secondary">Comentar</button>
                        </form>
                    </div>
              </div>
            </div>
        </div>
    </div>

<% include ../partials/footer %>